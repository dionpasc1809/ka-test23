{
  "name": "ka-test2",
  "version": "1.0.0",
  "description": "A boilerplate for a Koa Redux React application with Webpack, Mocha and SASS",
  "main": "index.js",
  "scripts": {
    "webserver": "node api/src/server.js",
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js 'test/**/*.@(js|jsx)'",
    "test:watch": "npm run test -- --watch",
    "build": "node_modules/.bin/webpack",
    "dev": "node_modules/.bin/webpack-dev-server",
    "lint": "eslint . --ext .js --ext .jsx",
    "deploy": "NODE_ENV=production webpack -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mezod/boilerplate-koa-redux-react.git"
  },
  "keywords": [
    "boilerplate",
    "koa",
    "redux",
    "react",
    "webpack",
    "mocha",
    "sass"
  ],
  "author": "Joan Boixad√≥s",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mezod/boilerplate-koa-redux-react/issues"
  },
  "homepage": "https://github.com/mezod/boilerplate-koa-redux-react#readme",
  "dependencies": {
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "bookshelf": "^0.9.4",
    "css-loader": "^0.23.1",
    "history": "^1.13.1",
    "html-webpack-plugin": "^2.16.0",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "knex": "^0.10.0",
    "koa": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-route": "^2.4.2",
    "mysql": "^2.10.2",
    "node-sass": "^3.6.0",
    "react": "^15.0.1",
    "react-document-title": "^2.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.3.0",
    "redux": "^3.5.2",
    "redux-form": "^4.2.2",
    "redux-form-validation": "0.0.6",
    "redux-thunk": "^2.0.1",
    "sass-loader": "^3.2.0",
    "source-map": "^0.5.5",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.4",
    "eslint": "^2.8.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^5.0.1",
    "jsdom": "^8.4.0",
    "mocha": "^2.4.5",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.2.0",
    "webpack-dev-server": "^1.14.1"
  },
  "directories": {
    "test": "test"
  }
}
